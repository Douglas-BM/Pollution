<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contPlayer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingVertical="5dp"
    android:paddingHorizontal="15dp"
    android:gravity="center_vertical"
    android:background="@drawable/rectangulo_gray">
    <ImageView
        android:id="@+id/ivuser"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_player"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tvnombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="USER"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/ivuser"/>
    <TextView
        android:id="@+id/tvttitlescore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Puntaje maximo : "
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/ivuser"
        android:layout_below="@id/tvnombre"/>
    <TextView
        android:id="@+id/tvscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="1000"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_toRightOf="@id/tvttitlescore"
        android:layout_below="@id/tvnombre"/>
    <TextView
        android:id="@+id/tvttitleslevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Nivel maximo : "
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/ivuser"
        android:layout_below="@id/tvttitlescore"/>
    <TextView
        android:id="@+id/tvlevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="1000"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_toRightOf="@id/tvttitleslevel"
        android:layout_below="@id/tvttitlescore"/>
    <TextView
        android:id="@+id/tvtop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:gravity="center"
        android:text="00"
        android:textColor="@color/black"
        android:background="@drawable/rectangulo_white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>