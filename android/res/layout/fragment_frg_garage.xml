<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".Fragments.frg_garage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/contNaves"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rectangulo_bottom_gray_dark"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangulo_bottom_red"
                android:gravity="center"
                android:padding="5dp"
                android:text="GARAJE"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvNaves"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/item_nave_list" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contNaveSet"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/contNaves"
            android:layout_above="@id/contDetalle"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="300dp"
                android:background="@drawable/rectangulo_rigth_gray_dark"
                android:gravity="center_horizontal|center_vertical"
                android:padding="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvGuns"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    tools:listitem="@layout/item_gun_list" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivnave"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:layout_alignParentLeft="true"
                android:layout_toRightOf="@id/rvAmmos"
                android:layout_weight="1"
                android:src="@drawable/nave" />

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="300dp"
                android:background="@drawable/rectangulo_left_gray_dark"
                android:gravity="center_horizontal|center_vertical"
                android:padding="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAmmos"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    tools:listitem="@layout/item_ammo_list" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:background="@drawable/rectangulo_top_gray_dark"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvblindage"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/rectangulo_gray"
                    android:drawableTop="@drawable/ic_blindaje"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="100"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvvida"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/rectangulo_gray"
                    android:drawableTop="@drawable/ic_vida"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="100"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvcadencia"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/rectangulo_gray"
                    android:drawableTop="@drawable/ic_cadencia"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="100"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvdamage"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/rectangulo_gray"
                    android:drawableTop="@drawable/ic_damage"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="100"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>